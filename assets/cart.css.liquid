.cart_page {
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px 40px;
}
.cart-items.items-cart-page {
  display: table;
  width: 100%;
}

.cart-table {
  display: table-header-group;
}
h2.h2-title {
  border-bottom: 1px solid #ddd;
  padding-bottom: 8px;
}
.cart-title {
  text-align: center;
}
.cart-item {
  display: table-row;
}
.Cart__HeadItem {
  display: table-cell;
  vertical-align: middle;
}
.cart-item-img {
  width: 120px;
  padding: 15px 0;
}
.cart-item-img img {
  width: 100%;
}
.Cart__HeadItem.cart-item-title {
  max-width: 500px;
  width: 500px;
  padding-left: 25px;
}

.cart-quantiy-selector {
  border: 1px solid;
  display: inline-block;
}
.cart-quantiy-selector input {
  width: 80px;
  border: none;
  padding: 10px 0;
  display: inline-block;
  text-align: center;
}

button.btn {
  border: none;
  background-color: transparent;
  font-size: 20px;
}

.cart-item-total {
  margin: 20px;
}
.button-container {
  display: flex;
}
.cart-item-img {}

.cart-item-remove {
  margin-top: 5px;
  text-align: left;
}
a:focus-visible {
  display: none;
}
.cart-quantity-selector {
  border: 1px solid black;
  max-width: 100px;
  display: flex;
  justify-content: space-around;
  padding: 5px 0;
}

.input-update {
  max-width: 30px;
  border: none;
  text-align: center;
}
.input-update:focus-visible {
  display: none;
}