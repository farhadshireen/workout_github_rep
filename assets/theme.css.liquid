:root{
  --page-width : {{ settings.page-width }}px;
  --headerBackgroundColor: {{ settings.background-color | default : "#ffffff"}};
  --textColor:{{ settings.color | default:"#111111"}};
  --mediumTextColor:{{ settings.medium_color | default:"#5e5e5e"}};
  --borderColor:{{ settings.border_color | default:"#dddddd"}};
  --footerBackground:{{ settings.foo-bg | default: "#ffffff" }};
  --footerColor:{{ settings.foo-color | default: "#000000"}};
  }

*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
img, svg {
  display: block;
  width: 100%;
}
a{
  color: inherit;
  text-decoration:none;
}
ul,
li{
  list-style: none;
}
h1, h2, h3{
  font-size: 20px;
}
p{
  font-size: 15px;
}
button, input, textarea, select{
  outline:none;
  border:none;
  background-color:transparent;
  appearance: none; 
}
.page-width{
  max-width: var(--page-width);
  width: calc( 100% - 40px);
  margin: 0 auto;
}

.product-grid-partial {
  display: flex;
  flex-wrap: wrap;
}

.product-grid-item {
  width: 50%;
}
.product-grid-item img {
  width: 100%;
}
.product-grid {
  padding: 10px 15px;
}
.featured-cart-conatiner {
  margin-top: 14px;
}
input.add-cart-btn {
  border: 1px solid #000;
  padding: 10px;
}

/* ----------------   collection   ----------------- */
ul.ul-featured-product {
  display: flex;
  align-items: self-end;
  flex-wrap: wrap;
  width: 100%;
}

li.li-featured-product {
  width: calc(25% - 10px);
  padding: 0 5px;
}

/* related product */
.related-product {
  display: flex;
  align-items: self-start;
}