.collection_container {
    display: flex;
    flex-wrap: wrap;
}

.filter-container {
    width: 20%;
}
.sort_container{
    display:block;
    text-align:right;
}
#sort-by{
    padding:4px;
    border: 1px solid #000;
}

.collection_page_content {
    width: 80%;
    padding-left: 20px;
}
.filterWrapper {
    padding: 16px 0;
    border-bottom:1px solid #000;
}
.display-group-price-range {
    margin-left: 20px;
}

.display-group-price-range-from {
    padding: 8px 0;
}

ul.filter-display-group-list {
    margin-left: 20px;
} 

li.filter-display-group-list-li {
    margin: 8px 0;
}

input[type="submit"] {
    border: 1px solid #000;
    padding: 7px 20px;
}
input.input-button {
    margin-top: 5px;
    padding:6px 10px !important;
}
.filter-display-group-list-li label{
    position:relative;
}
input:disabled + label{
    opacity:0.4;
}
.filter-display-group-list-li label:before {
    content: "";
    display: inline-block;
    width: 12px;
    height: 12px;
    border: 1px solid black;
    margin-right: 5px;
}
input:checked + label::before{
    background-color:#010101;
}
.display-group-price-range input{
    padding:10px 4px;
    border: 1px solid #000;
}
.submit-button {
    text-align: right;
}