.hide{
    display: none;
}
.show{
    display: block;
}

.header-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
ul.cart_icons {
    list-style: none;
} 

/*  header section strt */

.header_logo-width:{
    display: block;
}
.txt-color{
    color:var(--textColor);
}

button.header_hamburgar {
    display:none;
    width: 32px;
    cursor: pointer;
}
ul.ul-navigation {
    display: inline-flex;
    align-items: center;
    gap: 32px;
}

li.header-nav-item {
    /* padding: 10px; */
    position:relative;
}

a.header-nav-anchor {
    text-transform: capitalize;
    font-size: 18px;
}
ul.header-sub-nav {
    /* padding: 10px 20px; */
    text-transform: capitalize;
    position: absolute;
    left: 50%;
    display:none;
    border-radius:4px;
    background-color: white;
    transform: translateX(-50%);
    /* top: 42px; */
    width:200px;
}
.header-nav-item:hover .header-sub-nav{
    display: block;
} 

li.header-sub-item {
    /* margin-top: 10px; */
    display: block;
    position:relative;
    padding: 2px 26px;
}

a.header-sub-anchor {
    display: block; 
    color:#000;
    padding:6px;
}
.medium_color{
    color:var(--mediumTextColor);
}
.header-sub-item ul.header-dropdown {
    padding: 20px 6px;
    display:none;
    position: absolute;
    background-color: #fff;
    left: 100%;
    width: 100%; 
}
.header-sub-item:hover .header-dropdown{
    display:block;
}
li.li-cart-icon { 
    position: relative;
}
.header-cart .cart-item-count {
    color: #000;
    font-size: 14px;
    font-weight:bold;
    position: absolute;
    top: -4px;
    RIGHT: -24px;
    border: 1px solid;
    border-radius: 50%;
    padding: 1px 6px;
    background-color:#fff;
}
.alignment-flex-container.center_items{
    display: flex;
    justify-content: space-between;
    width: 75%;
}
.alignment-flex-container.left {
    display: flex;
    align-items: center;
}
.alignment-flex-container.logo_center {
    display: flex;
    flex-direction: row-reverse;
}
.alignment-flex-container.block_menu{
    width:100%;
}
.block_menu ul.ul-navigation{
    width: 100%;
    align-items: center;
    justify-content: center;
}
.navigation_column-container {
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}

.footer-top {
    padding: 20px 10px; 
}
h2.h2-navigation-title {
    margin-bottom: 20px;
}
.logo_container {
    margin-bottom: 20px;
}
.newsletter_form {
    margin-top: 15px;
    border: 1px solid #fff;
} 
input.input_field {
    padding: 5px;
    color: #fff;
}
li.li-foo {
    padding-bottom: 10px;
}
a.li-foo-anchor {
    text-transform: capitalize;
}
.footer_copyright {
    border-top: 1px solid #fff;
}
.copyright-container{
    padding-top: 20px;
}


@media(max-width:768px){
    button.header_hamburgar {
        display:block;
    }
    span.header_hamburgar_line {
        height: 2px;
        width: 100%;
        display: block;
        margin: 8px 0;
        border-radius: 1px;
        border: 1px solid #fff;
    }
    .header-nav-overlay{
        position:fixed;
        top:0;
        left:-100%;
        width: 100%;
        height:100%;
        background-color:rgba(0, 0, 0, 0.7);
        opacity:0;
        transition: 0.2s;
    }
    .nav-active .header-nav-overlay{
        left:0;
        opacity: 1;
        transition:0.2s;
    }
    .nav-active .ul-navigation{
        transform:none;
    }
    .ul-navigation {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9;
        height: 100%;
        width: 90%;
        max-width: 400px;
        overflow: auto;
        background-color:#00000026;
        transform:translateX(-100%);
        transition: 0.5s;
    }
    li.header-nav-item {
        border-bottom: 1px solid var(--borderColor); 
    }
    
    a.header-nav-anchor {
        display: block;
        padding: 10px;
        text-transform: capitalize;
    }
}
/*  header section end */

