.cart_drawer {
    position: fixed;
    top: 0;
    opacity: 0;
    left: -9999px;
    width: 100%;
    height: 100%;
    background-color:rgba(0, 0, 0, 0.7);
    transition: left 0s 0.2s, opacity 0.2s;
}
.cart-drawer--active {
    left: 0;
    opacity: 1;
    transition: left 0s, opacity 0.2s;
  }

.cart-drawer-box {
    width: 480px;
    height:100%;
    position: absolute;
    right:0;
    overflow-y: scroll;
    padding: 28px 20px;
    background-color: #f5f5f5;
}
p.cart-drawer-empty {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.cart-items-drawer {
    min-height: 290px;
    overflow-y: scroll;
}
.cart-footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.cart-items-quantity {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.cart-icon-right {
    display: flex;
    align-items: center;
}

buttton.cart-close-icon {
    display: flex;
}
.drawr-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid gray;
}
.cart-item-main {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.cart-drawer-box form#cart_form {
    height: 100%;
    overflow: scroll;
}
.cart-drawer-item-image {
    width: 120px;
}
.cart-drawer-item-image img {
    width: 120px;
    height: 120px;
    object-fit: cover;
}

