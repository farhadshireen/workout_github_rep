.list-collection {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

.list_items-container {
    width: calc(25% - 20px);
    position: relative;
}

.collection-featured-image {
    width: 100%;
    height: 100%;
}
h1.list-title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    text-align: center;
}