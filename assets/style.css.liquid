body {
  background-color: {{ settings.bg_color }}
  ;
  color: {{ settings.txt_color }}
  ;
}
h2,
h1 {
  margin: 0;
  color: black;
}
.hide {
  display: none;
}
.product-featured {
  display: inline-block;
}
ul.ul-level-one {
  list-style: none;
  display: flex;
}
.product-grid-partial {
  display: flex;
  flex-wrap: wrap;
}

.product-grid-item {
  width: 50%;
}
.product-grid-item img {
  width: 100%;
}
.product-grid {
  padding: 10px 15px;
}
.product-add {
  font-weight: bold;
  margin-top: 16px;
  background: black;
  color: white;
}
.product_price {
  display: flex;
  align-content: center;
}
.compare_price {
  margin-right: 20px;
  list-style: devanagari;
  color: #00000096;
  text-decoration-line: line-through;
}
.hide {
  display: none;
}
.li-product-variant {
  width: 100px;
  /*! display: inline; */
  margin: 10px 5px;
  list-style: none;
}
.product-thumbnail {
  display: flex;
  align-content: center;
}
.selected {
  border: 1px solid red;
}

