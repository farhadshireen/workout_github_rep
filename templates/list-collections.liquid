{% paginate collections by 4 %}
  <h1>Collection</h1>
  {% for collection in collections %}
    <div>
      <a href="{{ collection.url }}">
        <h1>{{ collection.title }}</h1>
        <p>Product:{{ collection.all_products_count }}</p>
      </a>
    </div>
  {% endfor %}
  {{ paginate | default_pagination }}
{% endpaginate %}