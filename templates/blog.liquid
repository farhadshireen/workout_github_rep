{% paginate blog.articles by 4 %}
  <h1>{{ blog.title }}</h1>Custom article
  {% for article in blog.articles %}
    <a href="{{ article.url }}">
      <h2>{{ article.title }}</h2>
      <p>{{ article.author }}</p>
      <p>{{ article.excerpt }}</p>
    </a>
  {% endfor %}
  {{ paginate | default_pagination }}
{% endpaginate %}