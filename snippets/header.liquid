<header>
  <h1>Your shop name: {{ shop.name }}</h1>
  <!-- Main menu -->
  <ul class="ul-level-one">
    {% for link in linklists.main-menu.links -%}
      <li>{{ link.title | link_to: link.url }}</li>
    {%- endfor %}
  </ul>

  <form action="/search">
    <input type="search" name="q" />
    <button type="submit">Search</button>
  </form>

</header>